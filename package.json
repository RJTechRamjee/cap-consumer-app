{
  "name": "cap-consumer",
  "version": "1.0.0",
  "description": "CAP Consumer - calls Provider API via CDS remote service",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.1.0",
    "@sap/cds-dk": "^9",
    "sqlite3": "^5.1.7"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "[hybrid]": {
          "kind": "hana",
          "vcap": {
            "name": "cap-consumer-db"
          }
        }
      },
      "CatalogService": {
        "kind": "odata-v4",
        "model": "srv/external/CatalogService",
        "[production]": {
          "credentials": {
            "destination": "dest_cap_provider_api",
            "path": "/odata/v4/catalog"
          }
        },
        "[development]": {
          "credentials": {
            "destination": "dest_cap_provider_api",
            "path": "/odata/v4/catalog"
          }
        },
        "[hybrid]": {
          "credentials": {
            "destination": "dest_cap_provider_api",
            "path": "/odata/v4/catalog"
          }
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "connectivity": true,
      "destinations": true
    },
    "build": {
      "target": "gen"
    }
  }
}
